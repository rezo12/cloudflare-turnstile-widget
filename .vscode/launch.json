    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run debug",
            "internalConsoleOptions": "openOnFirstSessionStart",
            "serverReadyAction": {
                "pattern": "Local:.+(https?://[^:]+:[0-9]+)",
                "uriFormat": "%s",
                "action": "debugWithChrome",
                "webRoot": "${workspaceFolder}",
                "killOnServerStop": true
            }
        }
    ]
}